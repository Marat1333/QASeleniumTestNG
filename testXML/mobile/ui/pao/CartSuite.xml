<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Cart Suite" parallel="tests">

    <listeners>
        <listener class-name="com.leroy.core.listeners.TestRailListener"/>
    </listeners>

    <test name="C22797089 Создать корзину с экрана Документы продажи">
        <classes>
            <class name="com.leroy.magmobile.ui.tests.sales.CartTest">
                <methods>
                    <include name="testCreateBasketFromSalesDocumentsScreen"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C22797090 Добавить новый товар в корзину">
        <classes>
            <class name="com.leroy.magmobile.ui.tests.sales.CartTest">
                <methods>
                    <include name="testAddNewProductIntoBasket"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C22797098 Удалить товар из корзины">
        <classes>
            <class name="com.leroy.magmobile.ui.tests.sales.CartTest">
                <methods>
                    <include name="testRemoveProductFromCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C22797099 Удалить последний товар из корзины">
        <classes>
            <class name="com.leroy.magmobile.ui.tests.sales.CartTest">
                <methods>
                    <include name="testRemoveTheLastProductFromCart"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
